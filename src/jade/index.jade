extend includes/_layout

block title
	title Index

block header
	//begin nav
	nav.nav.js-nav
		.nav__close.js-nav-close
			.nav__close-icon
		.nav__in
			a.nav__link.is-active(href='index.html'): h2 Home
			a.nav__link(href='publish.html'): h2 Publisher Solutions
			a.nav__link(href='advert.html'): h2 Advertisers
			a.nav__link(href='career.html'): h2 Careers
			a.nav__link(href='contact.html'): h2 Contact
			a.nav__link(href='about.html'): h2 About
