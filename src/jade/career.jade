			.career__container
				.section__title.title.title_medium.title_blue We Offer:
				.career__center
					ul.career__list.list
						li.list__item Competitive Salary
						li.list__item Health and Dental Insurance Benefits
						li.list__item 401 (k) Plan + Employer Matching
						li.list__item Leave at 4pm on Fridays (If you show up at 8am)
	//end section

	//begin section
	section.section.section_gray.career
